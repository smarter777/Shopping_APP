<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vishalgaur.shoppingapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_goto_addProduct"
            app:destination="@id/addEditProductFragment" />
        <action
            android:id="@+id/action_seeProduct"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditProductFragment"
        android:name="com.vishalgaur.shoppingapp.ui.home.AddEditProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_edit_product">
        <argument
            android:name="categoryName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="isEdit"
            app:argType="boolean"
            app:nullable="false" />
        <argument
            android:name="productId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_addProductFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.vishalgaur.shoppingapp.ui.home.ProductDetailsFragment"
        android:label="ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details">
        <action
            android:id="@+id/action_productDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="productId"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailsFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.vishalgaur.shoppingapp.ui.home.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_selectAddressFragment"
            app:destination="@id/selectAddressFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectAddressFragment"
        android:name="com.vishalgaur.shoppingapp.ui.home.SelectAddressFragment"
        android:label="fragment_select_address"
        tools:layout="@layout/fragment_select_address" />
</navigation>